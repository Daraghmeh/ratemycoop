{
  "name": "Company",
  "plural": "Companies",
  "base": "PersistedModel",
  "idInjection": true,
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "logo": {
      "type": "string"
    },
    "overallRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "1",
      "scale": "2"
    },
    "cultureRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "1",
      "scale": "2"
    },
    "difficultyRating": {
      "type": "number",
      "dataType": "decimal",
      "precision": "1",
      "scale": "2"
    },
    "description": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "reviews": {
      "type": "hasMany",
      "model": "Review"
    },
    "perks": {
      "type": "hasMany",
      "model": "Perk",
      "through": "CompanyPerk"
    },
    "majors": {
      "type": "hasMany",
      "model": "Major",
      "through": "CompanyMajor"
    },
    "locations": {
      "type": "hasMany",
      "model": "City",
      "foreignKey": "",
